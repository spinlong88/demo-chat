<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.icore.repository.person.UserModelMapper">

    <sql id="BASE_COLUMN_LIST">
        username,age,mobile,salary,birthday
    </sql>

    <select id="getUserList" resultType="com.icore.model.UserModel">
        select <include refid="BASE_COLUMN_LIST"></include> from user
    </select>
    <select id="getUser" resultType="com.icore.model.UserModel">
        select <include refid="BASE_COLUMN_LIST"></include>
        from user where id =#{id}
    </select>
    <delete id="deleteUser" parameterType="Long">
        delete from user where id =#{id}
    </delete>
    <insert id="addUser" parameterType="com.icore.model.UserModel">
        insert into user(<include refid="BASE_COLUMN_LIST"></include>)values(#{id},#{username},#{age})
    </insert>

    <update id="updateUser" parameterType="com.icore.model.UserModel">
        update user t
        set t.username = #{username,jdbcType=VARCHAR},
            t.age = #{age,jdbcType=INTEGER},
            t.mobile = #{mobile,jdbcType=VARCHAR},
            t.salary = #{salary,jdbcType=DECIMAL},
            t.brithdate = #{brithdate, jdbcType=DATE}
            where id =#{id}
    </update>
</mapper>